<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText
        android:id="@+id/url_txt"
        android:hint="请输入音频的url"
        android:text="/storage/emulated/0/DCIM/Camera/night.mp4"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    
    <SeekBar
        android:id="@+id/audio_seekbar"
        android:max="1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time_txt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/play_btn"
            android:text="起播"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/pause_btn"
            android:text="暂停"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/resume_btn"
            android:text="复播"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/stop_btn"
            android:text="停止"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/volume_seekbar"
            android:max="100"
            android:progress="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/volume_txt"
            android:text="音量 : 100"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <CheckBox
            android:id="@+id/loop_box"
            android:checked="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="循环播放"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/speed_1_btn"
            android:text="0.5"
            android:backgroundTint="@color/mtrl_btn_bg_color_selector"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/speed_2_btn"
            android:text="0.75"
            android:backgroundTint="@color/mtrl_btn_bg_color_selector"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/speed_3_btn"
            android:text="正常"
            android:backgroundTint="@color/mtrl_btn_bg_color_selector"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/speed_4_btn"
            android:text="1.5"
            android:backgroundTint="@color/mtrl_btn_bg_color_selector"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/speed_5_btn"
            android:text="2"
            android:backgroundTint="@color/mtrl_btn_bg_color_selector"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>